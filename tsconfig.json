{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "helpers/*": ["src/helpers/*"],
      "hooks/*": ["src/hooks/*"],
      "types/*": ["src/types/*"]
    }
  },
  "include": ["__test__/*", "src/**/*", "decs.d.ts"],
  "exclude": ["node_modules", "coverage", "dist"]
}
